#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int N, M;
    scanf("%d %d", &N, &M);
    for (int i = 1; i <= N; i++) 
    {
        for (int j = 1; j <= M; j++) 
        {
            if (i == 1 || i == N || j == 1 || j == M) 
            {
                printf("* ");
            } else 
            {
                printf("  "); 
            }
        }
        printf("\n"); 
    }

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}
